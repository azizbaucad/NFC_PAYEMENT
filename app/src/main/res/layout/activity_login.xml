    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/passworOubTxt"
        android:layout_below="@+id/emailOubTxt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="0dp"
        android:hint="Mot de passe"
        android:paddingEnd="12dp"
        android:drawableRight="@drawable/modern_icon_password"
        android:drawablePadding="0dp"
        android:inputType="number"
        android:textSize="22sp"
        android:textColor="@color/black"/>
    <Button
        android:id="@+id/loginBtn"
        app:backgroundTint="@color/purple_500"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/passworOubTxt"
        android:drawablePadding="0dp"
        android:background="@drawable/stroke_bg"
        android:layout_marginTop="0dp"
        android:text="Se connecter"
        android:textSize="20dp"
        android:layout_margin="0dp"
        android:padding="0dp"/>
    <ImageView
        android:id="@+id/logo01"
        android:src="@drawable/logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/loginBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"/>

    <TextView
        android:id="@+id/paiement"
        android:layout_below="@+id/logo01"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:textColor="@color/marron"
        android:text="Paiement sans contact"
        android:gravity="center"
        android:textStyle="normal"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/i-marchand"
        android:layout_below="@+id/paiement"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:textColor="@color/marron"
        android:text="I-Marchand"
        android:gravity="center"
        android:textStyle="normal"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/i-marchand"
        android:layout_centerHorizontal="true"
        android:text="Copyright 2022 - Innov4Africa"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/marron"
        android:layout_marginTop="0dp"
        />




