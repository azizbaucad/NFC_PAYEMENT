<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ActivitySplashScreen">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/i-marchand"
        android:layout_below="@+id/paiement"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="610dp"
        android:textColor="@color/marron"
        android:text="I-Marchand"
        android:gravity="center"
        android:textStyle="normal"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/i-marchand"
        android:layout_centerHorizontal="true"
        android:text="Copyright 2022 - Innov4Africa"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/marron"
        android:layout_marginTop="10dp"
        />


