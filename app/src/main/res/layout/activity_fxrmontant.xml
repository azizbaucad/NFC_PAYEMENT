<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:background="#FFFFFF"
    tools:context=".Activityfixrmontant">

    <LinearLayout
        android:id="@+id/fxBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#5F0C0C"
        android:padding="1dp"
        android:paddingRight="24dp">
        <!-- Image Back -->

        <ImageView
            android:id="@+id/btn_back_img"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/back01"
            android:contentDescription="Retour"
            android:layout_alignParentStart="true"/>
        <!-- End Image Back -->
        <!-- Text in appBar -->
        <TextView
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="100dp"
            android:text="Fixer un montant"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
        <!-- End TExt in appBar -->
    </LinearLayout>
    <!-- Mettre ici Le EditText -->
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edit_fix_montant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="50dp"
        android:drawableRight="@drawable/ic_credit_card"
        android:drawablePadding="0dp"
        android:hint="Enter le montant Ã  fixer"
        android:inputType="number"
        android:textColor="@color/black"
        android:layout_below="@+id/fxBack"
        android:textSize="22sp"/>
    <!-- Fin du EdiText -->
    <!-- Mettre ici le Button valider -->
    <Button
        android:id="@+id/fixmontant"
        android:gravity="center"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:layout_below="@+id/edit_fix_montant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="valider"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

